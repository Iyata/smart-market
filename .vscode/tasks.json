{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ng-build-test",
            "type": "shell",
            "command": "ng",
            "args": [
                "build",
                "--prod",
                "--env=testing"
            ],
            "options": {
                "cwd": "${workspaceFolder}/client"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "test-build",
            "type": "shell",
            "command": "gulp",
            "args": [
                "copy"
            ],
            "dependsOn": [
                "ng-build-test"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },


        {
            "label": "ng-build-prod",
            "type": "shell",
            "command": "ng",
            "args": [
                "build",
                "--prod",
                "--env=prod"
            ],
            "options": {
                "cwd": "${workspaceFolder}/client"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "deploy-build",
            "type": "shell",
            "command": "gulp",
            "args": [
                "copy"
            ],
            "dependsOn": [
                "ng-build-prod"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}